{
  "info": {
    "name": "GeekGully API - Integration",
    "_postman_id": "geekgully-collection-001",
    "description": "Collection for frontend integration and QA. Use the included environment (postman_environment.json) and set {{baseUrl}} (http://localhost:8080) and {{token}} before running. All API responses are wrapped in ApiResponse { success, message, data }.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register (example)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@gg.local\",\n  \"name\": \"Test User\",\n  \"password\": \"Pass123!\",\n  \"mobileNo\": \"9999999999\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/users/register",
          "host": ["{{baseUrl}}"],
          "path": ["api","users","register"]
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@gg.local\",\n  \"password\": \"Pass123!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/users/login",
          "host": ["{{baseUrl}}"],
          "path": ["api","users","login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save token from response into environment variable 'token' for subsequent requests",
              "var json = pm.response.json();",
              "if (json && json.data && json.data.token) {",
              "  pm.environment.set('token', json.data.token);",
              "}"]
          }
        }
      ]
    },
    {
      "name": "Groups - List",
      "request": {
        "method": "GET",
        "header": [ { "key":"Accept","value":"application/json" }, { "key":"Authorization","value":"Bearer {{token}}" } ],
        "url": { "raw": "{{baseUrl}}/api/groups", "host":["{{baseUrl}}"], "path":["api","groups"] }
      }
    },
    {
      "name": "Groups - Create (admin)",
      "request": {
        "method": "POST",
        "header": [ { "key":"Content-Type","value":"application/json" }, { "key":"Authorization","value":"Bearer {{token}}" } ],
        "body": { "mode":"raw", "raw": "{ \"name\": \"editors\" }" },
        "url": { "raw":"{{baseUrl}}/api/groups","host":["{{baseUrl}}"],"path":["api","groups"] }
      }
    },
    {
      "name": "Categories - List",
      "request": { "method": "GET", "header": [ { "key":"Accept","value":"application/json" }, { "key":"Authorization","value":"Bearer {{token}}" } ], "url": { "raw": "{{baseUrl}}/api/categories", "host":["{{baseUrl}}"],"path":["api","categories"] } }
    },
    {
      "name": "CMS - Create metadata",
      "request": {
        "method": "POST",
        "header": [ { "key":"Content-Type","value":"application/json" }, { "key":"Authorization","value":"Bearer {{token}}" } ],
        "body": { "mode":"raw", "raw": "{ \"type\": \"ARTICLE\", \"categoryId\": 1 }" },
        "url": { "raw":"{{baseUrl}}/api/cms","host":["{{baseUrl}}"],"path":["api","cms"] }
      }
    },
    {
      "name": "CMS - Upload content (multipart)",
      "request": {
        "method": "POST",
        "header": [ { "key":"Authorization","value":"Bearer {{token}}" } ],
        "body": { "mode":"formdata", "formdata": [ { "key":"file", "type":"file", "src":"" } ] },
        "url": { "raw":"{{baseUrl}}/api/cms/{{cmsId}}/upload","host":["{{baseUrl}}"],"path":["api","cms","{{cmsId}}","upload"] }
      }
    },
    {
      "name": "CMS - Send back to draft (reviewer)",
      "request": {
        "method": "POST",
        "header": [ { "key":"Content-Type","value":"application/json" }, { "key":"Authorization","value":"Bearer {{token}}" } ],
        "body": { "mode":"raw", "raw": "{ \"reviewerId\": 5, \"comment\": \"Please fix section 2\" }" },
        "url": { "raw":"{{baseUrl}}/api/cms/{{cmsId}}/send-back","host":["{{baseUrl}}"],"path":["api","cms","{{cmsId}}","send-back"] }
      }
    },
    {
      "name": "CMS - Download content",
      "request": {
        "method": "GET",
        "header": [ { "key":"Authorization","value":"Bearer {{token}}" } ],
        "url": { "raw":"{{baseUrl}}/api/cms/{{cmsId}}/content","host":["{{baseUrl}}"],"path":["api","cms","{{cmsId}}","content"] }
      }
    }
  ]
}
